<Window x:Class="WpfCounterApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCounterApp"
        mc:Ignorable="d"
        Title="Settings" Height="Auto" Width="500" MaxHeight="400" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" Background="{DynamicResource PrimaryBackgroundColor}" BorderThickness="1" MouseLeftButtonDown="Window_MouseLeftButtonDown" Foreground="{DynamicResource PrimaryForegroundColor}" BorderBrush="{DynamicResource PrimaryBorderBrushColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="16" Grid.Row="0" Height="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="General" FontSize="24" FontFamily="Century Gothic" Foreground="{DynamicResource PrimaryForegroundColor}"/>
                <Grid Grid.Row="1" MinHeight="32" Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Theme" FontSize="24" FontFamily="Century Gothic" Foreground="{DynamicResource PrimaryForegroundColor}"/>
                <Grid Grid.Row="1" MinHeight="32" Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ListBox x:Name="ThemeListBox" Foreground="{DynamicResource PrimaryForegroundColor}" Background="{x:Null}" Grid.Row="0" BorderBrush="{x:Null}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Width="45" Height="45" Margin="4" Background="{Binding PrimaryColor}" ToolTip="{Binding Name}" BorderBrush="{DynamicResource PrimaryBorderBrushColor}" BorderThickness="1" CornerRadius="2"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock x:Name="MessageTextBlock" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" Foreground="{DynamicResource PrimaryForegroundColor}" TextWrapping="WrapWithOverflow">

                    </TextBlock>

                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="0, 8" VerticalAlignment="Top" HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button x:Name="AddThemeButton" Style="{DynamicResource CustomButton}" Content="&#xe710;" FontFamily="Segoe MDL2 Assets" FontSize="16" Height="30" Width="30" Margin="4, 0, 0, 0" BorderBrush="{DynamicResource PrimaryBorderBrushColor}" Foreground="{DynamicResource PrimaryForegroundColor}" IsEnabled="False" ToolTip="Add" Click="AddThemeButton_Click" LostFocus="AddThemeButton_LostFocus"/>
                        <Button x:Name="EditThemeButton" Style="{DynamicResource CustomButton}" Content="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="16" Height="30" Width="30" Margin="4, 0, 0, 0" BorderBrush="{DynamicResource PrimaryBorderBrushColor}" Foreground="{DynamicResource PrimaryForegroundColor}" IsEnabled="False" ToolTip="Edit" Click="EditThemeButton_Click" LostFocus="EditThemeButton_LostFocus"/>
                        <Button x:Name="ApplyThemeButton" Style="{DynamicResource CustomButton}" Content="&#xe73e;" FontFamily="Segoe MDL2 Assets" FontSize="16" Height="30" Width="30" Margin="4, 0, 0, 0" BorderBrush="{DynamicResource PrimaryBorderBrushColor}" Foreground="{DynamicResource PrimaryForegroundColor}" Click="ApplyThemeButton_Click" ToolTip="Apply" LostFocus="ApplyThemeButton_LostFocus"/>
                        <Button x:Name="DeleteThemeButton" Style="{DynamicResource CustomButton}" Content="&#xe74d;" FontFamily="Segoe MDL2 Assets" FontSize="16" Height="30" Width="30" Margin="4, 0, 0, 0" BorderBrush="{DynamicResource PrimaryBorderBrushColor}" Foreground="{DynamicResource PrimaryForegroundColor}" ToolTip="Delete" Click="DeleteThemeButton_Click" LostFocus="DeleteThemeButton_LostFocus"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="8">
            <Button x:Name="ExitButton" Style="{DynamicResource CustomButton}" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="20" Width="40" Height="40" Margin="2" ToolTip="Exit" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
